# GitHub API
GITHUB_REPO_OWNER=wbfoss
GITHUB_REPO_NAME=fossradar

# GitHub Token - ONLY needed for local development
# In GitHub Actions, this is automatically provided as secrets.GITHUB_TOKEN
# Required for: validation, enrichment, auto-verification
# Get token at: https://github.com/settings/tokens (select "public_repo" permission)
GITHUB_TOKEN=

# Webhooks (optional - for auto-revalidation)
WEBHOOK_SECRET=

# Admin API Key (optional - for manual sitemap ping)
# Used to secure the /api/ping-sitemap endpoint
ADMIN_API_KEY=

# Site URL (for sitemaps)
SITE_URL=https://fossradar.in
